{
    // Use IntelliSense to learn about possible Node.js debug attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Nodemon",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "port": 9230
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/bin/**/*.js"
            ],
            "program": "${workspaceRoot}/src/kasaptanal.ts",
            "runtimeArgs": [
                "--nolazy"
            ],
            "protocol": "inspector",
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "internalConsole",

            "env": {

            }
        }
    ]
}