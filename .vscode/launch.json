    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Node: Nodemon",
            "processId": "${command:PickProcess}",
            "restart": true,
            "protocol": "inspector",
            "port": 9230
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "cwd": "${workspaceRoot}",
            "outFiles": [
                "${workspaceRoot}/bin/**/*.js"
            ],
            "program": "${workspaceRoot}/src/kasapburada.ts",
            "runtimeArgs": [
                "--nolazy"
            ],
            "protocol": "inspector",
            "sourceMaps": true,
            "stopOnEntry": false,
            "console": "internalConsole",
