<!DOCTYPE html>
<html lang="tr-TR" prefix="og: http://ogp.me/ns#">

<head>
    <% include ./_partial/head %>
    <meta name="robots" content="noindex,follow">

</head>

<body>
    <% include ./_partial/header %>



    <div class="page-title-overlap bg-accent pt-4">
        <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
            <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
                <nav aria-label="breadcrumb">
                    <ol
                        class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-star">
                        <li class="breadcrumb-item"><a class="text-nowrap" href="/"><i class="czi-home"></i></a></li>
                        <li class="breadcrumb-item text-nowrap active" aria-current="page">
                            Siparişlerim</li>
                    </ol>
                </nav>
            </div>
            <div class="order-lg-1 pr-lg-4 text-center text-lg-left">
                <h1 class="h3 text-light mb-0">Siparişlerim</h1>
                <p class="lead text-light"></p>

            </div>
        </div>
    </div>

    <!-- Page Content-->
    <div class="container pb-5 mb-2 mb-md-3">
        <div class="row">
            <%- include('./_partial/user.sidebar.ejs', {
               page: 'orders'
           }) %>
            <!-- Content  -->
            <section class="col-lg-8">
                <!-- Toolbar-->
                <div class="d-none d-lg-flex justify-content-between align-items-center pt-lg-3 pb-4 pb-lg-5 mb-lg-3">
                    <h6 class="font-size-base text-light mb-0">Siparişlerim</h6><a class="btn btn-primary btn-sm"
                        href="/user/signoff"><i class="czi-sign-out mr-2"></i>Çıkış</a>
                </div>
                <!-- Orders list-->
                <div class="table-responsive font-size-md">
                    <table class="table mb-0">
                        <thead>
                            <tr>
                                <th>Sipariş #</th>
                                <th>Tarih</th>
                                <th>Durum</th>
                             
                                <th>Kasap</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% orders.forEach(p=> { %>
                            <tr>
                                <td class="py-3"><a class="btn btn-sm btn-dark"
                                        href="/user/orders/<%=p.ordernum%>#order"><%=p.ordernum%></a></td>
                                <td class="py-3"><%=__helper.formatDate(p.creationDate) %></td>
                                <td class="py-3"><span class="badge badge-info m-0"><%=p.status%></span></td>
                                <!-- <td class="py-3">

                                        <%- include('./_partial/currency.ejs', {value: -1*p.discountTotal}) %>
                                </td>                                 -->
                                <td class="py-3">
                                    <%=p.butcherName%>
                                    </td>
                            </tr>
                          <% }) %>
                        </tbody>
                    </table>
                </div>
            </section>
        </div>
    </div>
    </section>
    </div>
    </div>


    <% include ./_partial/footer %>
    <% include ./_partial/scripts %>

</body>

</html>