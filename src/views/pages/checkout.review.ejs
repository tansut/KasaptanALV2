                <li><span class="text-muted">Gün:&nbsp;</span><%= shopcard.shipment[bi].daysText %></li>
                <li><span class="text-muted">Saat Aralığı:&nbsp;</span><%= shopcard.shipment[bi].hoursText%> </li>
                <%}%>
