            <a class="d-none d-md-block btn btn-sm" href="<%=`/blog` %>">Tümü &raquo;</a>    
        </div>
        
            <div data-simplebar>
                <div class="d-flex pb-2">
                    <% var items =  controller.blogItems %>
                    <% items.forEach((item, i) => {%>
                      
                        
                    <div>
                                     <div class="mr-2 item-slider product-card item-card">
                                <a class="d-block"  href="<%= `/blog/${item.slug}` %>">
                                    <img width="500" height="333" title="<%=item.title%>"
                                        src="<%=`${__config.staticDomain}/content-resimleri/${item.slug}-thumbnail.jpg` %>"
                                        alt="<%=item.title%>"></a>

                                        
                                            <h3 class="py-2 mb-0 text-center product-title font-size-sm"><a
                                                    href="<%= `/blog/${item.slug}` %>"><%= item.title %></a>
                                            </h3>
                                       

                            </div>

                   
                        </div>


              
                   
                    <%})%>

                </div>
            </div>
      
            <div class="d-xs-block border-bottom d-md-none text-center mb-3">
                <a class="btn rounded-0 btn-sm btn-secondary" href="/blog">Tümü &raquo;
                </a>
            </div>




</div>





    <section class="container-fluid px-0 mb-3">
        <div class="row no-gutters">
