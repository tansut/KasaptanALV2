            <div class="carousel-item active">
              <img src="<%= contentImgs[i].url %>" class="d-block w-100" alt="<%= controller.content.title %>">
            </div>

            <% } %>
          </div>
        </div>
      </div>
      <div class="col-sm-6 pt-2 user-content">
        <%- include(`./content.${controller.content.slug}.ejs`) %>
