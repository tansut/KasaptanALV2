<!DOCTYPE html>
<html lang="tr-TR" prefix="og: http://ogp.me/ns#">

<head>
  <% include ./_partial/head %>
  <% if (Object.keys(__req.query).length != 0 ) {%>
    <meta name="robots" content="noindex,follow">
    <%}%>
</head>

<body>
  <% include ./_partial/header %>

  <%-include('./_partial/food-select-alternatives.ejs', {}) %>


  <div class="page-title-overlap bg-primary pt-4">
    <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
      <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-star">
            <li class="breadcrumb-item"><a class="text-nowrap" href="/"><i class="czi-home"></i></a></li>
            <li class="breadcrumb-item text-nowrap"><a href="/et-yemekleri">Yemekler</a>
            </li>
            <li class="breadcrumb-item text-nowrap active" aria-current="page"><%= controller.category.name %></li>
          </ol>
        </nav>
      </div>
      <div class="media media-ie-fix d-block d-sm-flex align-items-center text-center text-sm-left">
        <a class="d-inline-block mx-auto mr-sm-4" href="/<%= controller.category.slug%>" style="width: 10rem;">

          <img class="rounded-circle" src="<%=`${__req.helper.imgUrl('category-photos', controller.category.slug)}`%>"
            alt="<%= controller.category.name%>"></a>
        <div class="media-body pt-2">


          <h1 class="h3 text-light "><%= controller.category.name %></h1>
          <h2 class="lead h4 text-light"><%= controller.category.shortdesc %></h2>

        </div>
      </div>
    </div>
  </div>

  <% var reyonlar = __helper.foodCategories.filter(p=>p.slug=='tarifler') %>
  <div class="container px-0">
    <div class="bg-light box-shadow-lg  mb-3 ">
      <ul class="nav nav-tabs  nav-justified mb-3 " id="pills-tab" role="tablist">
        <li class="nav-item">
          <a class="nav-link nav-link-shrink nav-link-shrink <%= controller.foodCategory ? '': 'active' %>" id=all-tab" 
            href="/et-yemekleri/<%=  controller.category.slug  %>" role="tab" aria-controls="T端m端"
            >T端m端</a>
        </li>

        <%reyonlar.forEach((category,i) => { %>
        <li class="nav-item">
          <a class="nav-link nav-link-shrink <%= controller.category ? (controller.foodCategory == category.slug ? 'active':''): '' %>" id="<%= category.slug %>-tab" 
            href="<%=`/et-yemekleri/${controller.category.slug}?tab=${category.slug}`%>" role="tab" aria-controls="<%= category.name %>"
            ><%= category.name %></a>
        </li>
        <% }) %>
      </ul> 

      <div class="px-4">
        <div class="row cz-gallery">
          <% controller.foods.forEach((resource,i) => {%>
          <div class="col-md-2 col-6 mb-3">
            <%- include(`./_partial/resource-item.ejs`, {resource: resource, subUrl: 'ile-yapin'  }) %>
  
          </div>
          <% }) %>
        </div>

        <div class="mb-3">
          <%- include('./_partial/category-slider', { viewCats: ['resource'], title: 'Yemek Kategorileri', allUrl: '/et-yemekleri' }); %>
        
        </div>
        
        <% if (controller.category.mddesc) { %>
        <div class="collapse-container page-footer-text">
          <div class="collapse" id="collapseSummary">
            <%- controller.category.mddesc && controller.Markdown.render(controller.category.mddesc) %>
        
          </div>
          <a class="collapsed text-dark" data-toggle="collapse" href="#collapseSummary" aria-expanded="false" aria-controls="collapseSummary"></a>
        </div>
        <%}%>
      </div>






    </div>
  </div>

  <% include ./_partial/footer %>
  <% include ./_partial/scripts %>

</body>

</html>