<div>

    
    <div class="p-3 mb-2">
        
        <div class="input-group-overlay">
            <div class="input-group-prepend-overlay">
                <span class="input-group-text">
                    <i class="notsearching czi-search"></i>
                    <span class="searching d-none spinner-border spinner-border-sm" role="status" aria-hidden="true"></span>
                </span>
            </div>
            <input title="seçim" data-none-selected-text="seçim yapın" , data-search="area" id="page-searchbox"
                class="form-control searchBox-semt prepended-form-control" data-noresults-text="Maalesef bulamadık. Listeden seçim yapabilirsiniz."
                autocomplete="off" type="text" placeholder="semtinizi arayın">
        </div>
        <div class="mt-3 d-flex justify-content-between text-muted  font-size-sm">
            <div class="">
                <a class="text-info" onclick="$('#select-areafrom-list').toggle()">Listeden seç &raquo;</a>
                
            
            </div>
            <div id="userlocationapp" class="">
                <a v-if="!list || list.length == 0" id="semt-from-device" class="text-info" @click="locateSemt()">
                    <i class="czi-location"></i>
                    Mevcut Konumum</a>
                    <div v-if="list && list.length > 0">
                      
                        <div v-for="(addr, index) in list" class="mb-2">
                              <a @click="go(addr)" class="text-info">{{addr.display}}</a>
              
                          </div>                
                    </div>
            </div>
        </div>
       
    </div>
    <div id="select-areafrom-list" style="display: none;" class="bg-secondary border p-2 pb-0">
        <div class="row pt-2">
            <div class="col-sm-4">
                <div id="cityselectpickerDiv" class="form-group">
                    <select id="cityselectpicker">
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div id="ilceselectpickerDiv" class="form-group">
                    <select data-live-search="true" id="ilceselectpicker">
                    </select>
                </div>
            </div>
            <div class="col-sm-4">
                <div id="districtselectpickerDiv" class="form-group">
                    <select data-live-search="true" id="districtselectpicker">
                    </select>
                </div>
            </div>
        </div>
        <div class="text-center">
            <button id="exploreAreaButton" type="button" class="btn btn-sm btn-accent">Seç</button>
    
        </div>
    </div>
    
    
</div>
