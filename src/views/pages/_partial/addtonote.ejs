<% var settings = resource.settings || {} %>
<% options = typeof(options) == 'undefined' ? {}: options %>
window.App.ProductApp.addToNote(
{
note: '<%= resource.note %>',
unit: '<%= settings.po_unit %>',
title: '<%=resource.product.name%>',
perperson: <%= settings.po_perperson || 0 %>,
personCount: <%= settings.po_personcount || 0 %>,
ponote: '<%= settings.po_quantityNote || new String() %>',
noteph:'',
<%if (!options.encode) { %>
productView: <%- options.hideProduct ? JSON.stringify(null):  JSON.stringify({ name: resource.product.name, slug: resource.product.slug }) %>,
food: <%- JSON.stringify({ title: resource.title, url: resource.getThumbnailFileUrl(false) }) %>
<% } else { %>
productView: <%= options.hideProduct ? JSON.stringify(null):  JSON.stringify({ name: resource.product.name, slug: resource.product.slug }) %>,
food: <%= JSON.stringify({ title: resource.title, url: resource.getThumbnailFileUrl(false) }) %>
<% } %>
});