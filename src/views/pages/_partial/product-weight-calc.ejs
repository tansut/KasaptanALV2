<div class="modal fade" style="z-index: 10555;" id="size-chart">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title">{{options.title  || 'İhtiyacı belirleyelim'}} </h6>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span
            aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body p-0">
        <div class="" id="weightcalculatorapp">
          <div v-if="foodName" class="px-4 py-2  d-flex border-bottom flex-nowrap bg-secondary justify-content-center align-items-center">
            <div class="pr-2 w-50">
              <img src="/img/butcher-default-thumbnail.jpg" class="figure rounded-circle" alt="">
              </div>
              <div class="font-size-sm">
                <h6>{{productName}}</h6>
                <span>
                  Kasabımız 
                </span>
                <span class="font-weight-medium">
                  {{foodName}}
                </span>
                <span>
                  için
                </span> 
                <span class="font-weight-medium">
                  {{productName}}
                </span>
                <span>
                  önermektedir. 
                </span>
                  
              </div>
          </div>

          <div class="bg-secondary border-bottom  pt-2">
            <div class=" d-flex align-items-center justify-content-center mb-1">
              <span class="font-weight-medium">Kaç kişisiniz ?</span>
            </div>

        

            <amount-input class="" :def="2" :min="1" :max="25" :step="1" v-model="personcount" unit="kişi"></amount-input>
  
          </div>




            <div class="pt-4 mb-4" v-if="personcount > 0">
              
              <div class="form-group px-4 mt-2 mb-2">

                <textarea v-model="cardnote"
                  :placeholder="cardnoteph || 'notunuz varsa burayı kullanabilirsiniz.'"
                  class="form-control font-size-sm" rows="4" name="wanote" id="wanote">
    
                                                  
                                              </textarea>
              </div>
              <div class="mb-2 text-center font-size-xs text-muted px-4" v-if="note"><i class="czi-announcement mr-1"></i>{{note}}</div> 

              <div class="d-flex align-items-center justify-content-center">
                <button v-for="(option, index) in result" data-dismiss="modal" @click="setUnit(option)" class="btn mr-2 btn-primary">
                  <i class="czi-check mr-1"></i>
                  <span v-if="option.unit != 'kg'">
                    {{option.quantity}} {{option.unit}}
                  </span>
  
                  <weight-view v-if="option.unit == 'kg'" :kg=option.quantity></weight-view>
                
                </button>
              </div>


              <!-- <ul class="list-unstyled font-weight-medium">
                <li v-for="(option, index) in result" class="pb-1 pt-1 d-flex align-items-center justify-content-between">
                  <a v-if="option.unit != 'kg'" class="">
                    {{option.quantity}} {{option.unit}}
                  </a>

                  <weight-view v-if="option.unit == 'kg'" :kg=option.quantity></weight-view>
                  <button data-dismiss="modal" @click="setUnit(option)" class="btn btn-sm btn-primary">Seç</button>
                </li>
              </ul> -->
            </div>









        </div>
      </div>
    </div>
  </div>
</div>