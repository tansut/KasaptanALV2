<% 
  var dispatchers =  alternates
  
%>

<div  class="modal fade" id="butcher-alternatives">
  <div class="modal-dialog modal-dialog-scrollable ">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title">DiÄŸer Kasaplar</h6>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span
            aria-hidden="true">&times;</span></button>
      </div>
      <div  class="modal-body p-0">
        <div class="p-0">
          
          <div class="tab-content p-0 m-0 " id="butchers-serving-tabContent">
            <% if (dispatchers.length > 0) { %>
            <div  class="tab-pane fade show active" id="serving" role="tabpanel">
              <div v-if="product">
                <div v-for="(alt, index) in product.alternateButchers" class="bg-white border-bottom p-2">
                  <a class="media align-items-start flex-grow-1" :data-butcher="alt.butcher.slug" href="#newbutcher" @click="selectNewButcher(alt.butcher)">
                   
                     <img class="w-25"
                        :src="alt.butcher.thumbnail" :alt="alt.butcher.name">

                  

                    
                    <div class="media-body pl-2">
                      <h5 class="h6 mb-0">{{alt.butcher.name}}

                        
                      </h5>
                      <div v-if="alt.butcher.locationText" class="text-muted font-size-xs d-block">
                        {{alt.butcher.locationText}}<span v-if="alt.dispatcher.priceInfo" >
                           , {{alt.dispatcher.priceInfo}} 
                       </span> 

                      </div>
                      
                        <div v-if="alt.butcher.badges.length > 0" class="butcher-badges">
              
                        
                     
                         <!-- <span v-for="(badge, index) in alt.butcher.badges" class="badge badge-secondary border font-size-xs mr-1">
                          <i v-if="badge.icon" :class="badge.icon || '' + 'mr-1'"></i>
                          {{badge.name}}
              
                        </span>  -->
                     
                    </div>
                        <money-view v-if="!alt.butcher.kgPrice && selectedUnitForAlternate(alt.butcher)" :unit="selectedUnitForAlternate(alt.butcher).unitTitle" 
                        
                        class="font-size-sm text-accent" :money="selectedUnitForAlternate(alt.butcher).unitPrice"></money-view>
                        <money-view v-else unit="Kg" 
                        
                        class="font-size-sm text-accent" :money="alt.butcher.kgPrice"></money-view>
                       <!-- <span v-if="alt.dispatcher.priceInfo" class="d-block text-muted font-size-xs">
                           {{alt.dispatcher.priceInfo}} 
                        </span>  -->
                       <!-- <span v-if="alt.dispatcher.distance" class="d-block text-muted font-size-xs">
                           {{alt.dispatcher.distance.toFixed(0)}} km 
                        </span>  -->

                        <div class="font-size-sm text-dark mb-3" v-if="alt.butcher.productNote">  
                          
                          
                          <div v-html="alt.butcher.productNote" class="font-italic">                            
                       
                          </div>                          
                        </div>


                        <div class="d-flex w-100">
                          <div class="w-50 pr-2" v-if="alt.butcher.userRatingAsPerc > 0">
                            <div class="font-size-xs text-muted ">Memnuniyet</div>
                            <div class="progress">
                              <div class="progress-bar font-weight-medium bg-info" role="progressbar" :style="'width:' + alt.butcher.userRatingAsPerc + '%'" :aria-valuenow="alt.butcher.userRatingAsPerc" aria-valuemin="0" aria-valuemax="100">
                                {{alt.butcher.userRatingAsPerc}}%
                              </div>  
                            </div>
                          </div>
                          <div class="w-50 " v-if="alt.butcher.shipRatingAsPerc > 0">
                            <div class="font-size-xs text-muted ">Teslimat</div>
                            <div class="progress ">
                              <div class="progress-bar font-weight-medium bg-info" role="progressbar" :style="'width:' + alt.butcher.shipRatingAsPerc + '%'" :aria-valuenow="alt.butcher.shipRatingAsPerc" aria-valuemin="0" aria-valuemax="100">
                                {{alt.butcher.shipRatingAsPerc}}%
                              </div>  
                            </div>
                          </div>
                         
                    
                         

                         
                        </div>
                    </div>
                  </a></div> 
              </div>
         
             
            </div>
            <% } %>
          </div>
     

        </div>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-sm btn-primary" data-dismiss="modal">Kapat</button>
      </div>

    </div>
  </div>
</div>