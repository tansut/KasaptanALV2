<div class="modal fade" style="z-index: 10555;" id="food-alternative-meats">
  <div class="modal-dialog modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-header">
        <h6 class="modal-title">Hepsiyle güzel</h6>
        <button class="close" type="button" data-dismiss="modal" aria-label="Close"><span
            aria-hidden="true">&times;</span></button>
      </div>
      <div class="modal-body pl-1 py-1 pr-0">
        <div class="p-2">
          <p class="p-0">
            <span class="font-weight-medium">{{title}}</span> yapmak için kasaplarımız aşağıdaki lezzetleri önermektedir.
          </p>
          <div class="row no-gutters">
            <div class="col-6 mb-1 pr-1" v-for="item in list">
              <div class="card border rounded-0 product-card card-static h-100 item-card">
                <a class=" d-block overflow-hidden" :href="item.link"><img class="rounded-0" :src="item.src"
                    :alt="item.name"></a>
                <div class="card-body pl-0 text-center">
                  <h3 class="product-title font-size-md mb-1"><a :href="item.link">{{item.name}}</a>
                  </h3>
                  <p v-if="item && item.desc" class="mb-0 text-muted font-size-sm">
                    {{item.desc}}
                  </p>

                </div>
      
              </div>
            </div>
          </div>

        </div>
      </div>
    </div>
  </div>
</div>