<% var butcher = typeof(butcher) != 'undefined' ? butcher: null %>
<% var product = typeof(product) != 'undefined' ? product: butcherProduct.product %>
<% var badge = typeof(badge) != 'undefined' ? badge: product.tag2 %>

<div class="card product-card  ">
    <% if (badge && typeof(hideBadge) == 'undefined') { %>
    <span class="badge badge-danger badge-shadow d-print-none"><%=badge%></span>

    <% } %>
    <% if (product.badge == 'video' && typeof(hideBadge) == 'undefined') { %>
    <button class="btn-wishlist btn-sm d-print-none" type="button" data-toggle="tooltip" data-placement="left" title=""
        data-original-title="Zengin iÃ§erik"><i class="czi-video"></i></button>
    <% } %>

    
    <a class="d-block overflow-hidden" href="/<%=product.slug%><%=(butcher ? `?butcher=${butcher}`:'') %>"><img
            class="rounded-0 d-print-w-75" src="<%= `${__req.helper.imgUrl('product-photos', product.slug)}` %>"
            alt="<%= product.name  %>"></a>
            <% if (typeof(hideName) == 'undefined') { %>
    <div class="card-body pl-0 text-center">
        <h3 class="product-title font-size-md mb-1"><a
                href="/<%= product.slug%><%=(butcher ? `?butcher=${butcher}`:'') %>"><%= product.name  %></a>
        </h3>

        <% if (typeof(butcherProduct) != 'undefined') { %>
            <% var view = butcherProduct.priceView;  %>
            <div class="d-flex justify-content-center">
                <div class=" text-accent font-size-sm"><%- include('./currency.ejs', {value: view.price, unit: view.unitTitle}) %>
                </div>
             
              </div>
            <% } %>

        
    </div>



    <%}%>
</div>