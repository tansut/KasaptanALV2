<!-- Featured category (premium)-->
<section class="container">
    <% var cat = __categories[__categories.findIndex(p=>p.slug == category)] %>
    <div class="rowx">
        <!-- Banner with controls-->
        <div class="colx">
            <div class="bg-secondary mb-2 d-flex flex-column h-100 overflow-hidden rounded-lg" >
                

                    <div class="bg-secondary border-bottom p-2 d-flex flex-nowrap justify-content-between align-items-center">
                        <a class="media align-items-center align-self-center" href="/<%=cat.slug%>"><img class="rounded-circle header-img d-none d-md-block"  src="/<%=cat.slug%>/resimler/thumbnail" alt="<%=cat.name%>">
                        <div class="media-body pl-2">
                          <h3 class="h5 mb-0 mr-2"><%= typeof(title) != 'undefined' ? title: cat.name %></h3>
                          <span class="font-size-ms text-muted"><%= (typeof(desc) != 'undefined') ? desc: cat.shortdesc %></span>
                        </div></a>
                        <a class="align-self-center d-md-block btn btn-sm" href="<%=`/${cat.slug}` %>"><i
                            class="czi-arrow-right font-size-xs align-middle ml-1"></i></a>                        
                    </div>

            
            </div>
        </div>
        <% var products = controller.filterProductsByCategory({slug: cat.slug}) %>
        <!-- Product grid (carousel)-->
        <div class="colx- pt-2 pt-md-0 <%= reverse ? 'order-2 order-md-1':'' %> ">
         
            <%- include('./products-view', {viewId: "", viewMode:'tab', products: products}); %>

                </div>
                       
        
                </div>
            </section>
    