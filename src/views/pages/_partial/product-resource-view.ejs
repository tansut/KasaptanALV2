<div class="card product-card card-static item-card pb-0">
  <% if (resource.badge) {%>
    <span class="badge text-wrap badge-primary badge-shadow "><%= resource.badge || '' %>
    </span>
  
    <% }%>

    <% 
    var settings = resource.settings || {

    }
    
    %>

  <a data-resid="<%=resource.id%>" class="gallery-item <%= !note ? 'mb-grid-gutter':''%>  <%= resource.contentType == 'video-youtube' ? 'video-item':''%>"
    <% if (resource.tag1 && (resource.tag1.includes('tarif') || resource.tag1.includes('yemek'))) { %>
      data-sub-html="<%= `<h6 class="font-size-normal text-light">${resource.title || ''}</h6><p class="font-size-md mb-2">${resource.description || ''}</p>`%> 
      <% if (true) {%>
      <%=  '<button type="button" onclick="'%>  <%= include(`./addtonote.ejs`, {resource: resource, options: {hideProduct: true, encode: true} }) %>   <%='"class="btn btn-block btn-primary btn-sm rounded-0"><i class=" czi-thumb-up mr-2"></i>'%><%= resource.tag3 || 'Eti Bizden' + '</button>' %>
      <% } %>
      "
    
    <%} else if (resource.tag1 == 'hazirlama-sekli') { %>
      data-sub-html="<%= `<h6 class="font-size-normal text-light">${resource.title || ''}</h6><p class="font-size-md mb-2">${resource.description || ''}</p>`%> 
      <% if (true) {%>
      <%=  '<button type="button" onclick="'%>  <%= include(`./addtonote.ejs`, {resource: resource, options: { hideProduct: true, encode: true} }) %>   <%='"class="btn btn-block btn-primary btn-sm rounded-0"><i class=" czi-thumb-up mr-2"></i>'%><%= resource.tag3 || 'Bu şekilde hazırla' + '</button>' %>
      <% } %>
      "
      <% } else { %>
      data-sub-html="<%=`<h6 class="font-size-normal text-light">${resource.title|| ''}</h6><p class="font-size-md mb-2">${resource.description || ''}</h6>`%>"
    <% } %>
    href="<%= `${resource.getFileUrl()}` %>">
    <img class="<%=first ? '': ''%>" src="<%=  `${first ? resource.getFileUrl(): resource.getThumbnailFileUrl(true)}` %>"
      alt="<%= resource.title %>" /><span class="gallery-item-caption"><%=resource.title || ''%></span></a>


  <% if (note) { %>
  <div class="text-center mb-3 mt-1">
                       
    <button type="button" onclick="<%= include('./addtonote.ejs', {resource: resource, options: {hideProduct: true} }) %>"
      class="btn btn-primary btn-sm rounded-0"><i class=" czi-thumb-up mr-2">
      </i><%= resource.tag3 || 'Eti Bizden' %></button>
  </div>
  <%}%>

</div>

