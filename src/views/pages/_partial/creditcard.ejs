<%

var threeDhtml = typeof (controller.threeDhtml) == 'undefined' ? '': controller.threeDhtml

%>

<div class="accordion mb-2" id="payment-method" role="tablist">
  <div class="card">
    <div class="card-header" role="tab">
      <h3 class="accordion-heading"><a href="#card" data-toggle="collapse"><i class="czi-card font-size-lg mr-2 mt-n1 align-middle"></i>Online ödeyin zamandan kazanın<span class="accordion-indicator"><i data-feather="chevron-up"></i></span></a></h3>
    </div>
    <div class="collapse show" id="card" data-parent="#payment-method" role="tabpanel">
      <div class="card-body">
        <p class="font-size-sm">Güvenle ödeme yapın:&nbsp;&nbsp;<img class="d-inline-block align-middle" src="/static/img/cards.png" style="width: 187px;" alt="Cerdit Cards"></p>
        <div class="card-wrapper"></div>
        <div class="interactive-credit-card row">
          <div class="form-group col-sm-6">
            <input class="form-control" type="text" value="5890040000000016" name="number" placeholder="Kart Numarası" required>
          </div>
          <div class="form-group col-sm-6">
            <input class="form-control" type="text" name="name" placeholder="Kartın Üzerindeki İsim" value="dfsdf" required>
          </div>
          <div class="form-group col-sm-3">
            <input class="form-control" type="text" value="12/25" name="expiry" placeholder="GG/YY" required>
          </div>
          <div class="form-group col-sm-3">
            <input class="form-control" type="text" value="522" name="cvc" placeholder="CVC" required>
          </div>
          <div class="col-sm-6">
            <div class="form-group ">
              <div class="form-check  ">
                <input type="checkbox" name="3d" class="form-check-input" id="3d">
                <label class="form-check-label" for="3d">3d ödeme</label>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <% if (controller.threeDhtml) { %>

    <div class="modal fade" id="threeDmodal">
      <div class="modal-dialog modal-lg modal-dialog-centered" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Güvenli Ödeme</h4>
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">×</span>
                    </button>
                </div>
                <div class="modal-body">
                  <div class="embed-responsive embed-responsive-16by9">
                    <iframe id="threeDhtml" src="<%=threeDhtml%>" class="embed-responsive-item"></iframe>
                  </div>
                </div>
            </div>
      </div>
</div>



<script>
    function handle3dReturn(paymentId) {
    if (paymentId) {
      $('#paymentId').val(paymentId);
      document.getElementById("pageForm").submit();
    } else {
      $('#threeDmodal').modal('hide');
      window.App.alert("Ödeme başarız oldu", "danger")
    }
  }
</script>
    

  <% } %>

</div>

