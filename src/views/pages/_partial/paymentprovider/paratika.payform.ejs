<form onsubmit="beforeSubmit()" class="interactive-credit-card"
  action="<%=controller.paymentProvider.config.tdpost%>/<%=controller.paySession.sessionToken%>"





method="post">


<div class="row">
    <div class="form-group col-sm-6">
      <input class="form-control" type="text" 
      <% if (__config.nodeenv == 'development') { %>  
        value="4355084355084358"
      <% } %> 
      id="pan" name="pan"
       autocomplete="cc-number" placeholder="Kart Numarası" required>
    </div>
    <div class="form-group col-sm-6">
      <input class="form-control" type="text" name="cardOwner" id="cardOwner" autocomplete="cc-name" placeholder="Kartın Üzerindeki İsim" 
      <% if (__config.nodeenv == 'development') { %>  
        value="000"
      <% } %> 
      
      required>
    </div>
    <div class="form-group col-sm-6">           
      <div class="d-flex">
        <select autocomplete="cc-exp-month" class="form-control mr-2" name="expiryMonth" id="expiryMonth">
          <option value="01">01</option>
          <option value="02">02</option>
          <option value="03">03</option>
          <option value="04">04</option>
          <option value="05">05</option>
          <option value="06">06</option>
          <option value="07">07</option>
          <option value="08">08</option>
          <option value="09">09</option>
          <option value="10">10</option>
          <option value="11">11</option>
          <option value="12">12</option>
       </select>
       <select autocomplete="cc-exp-year" class="form-control" name="expiryYear" id="expiryYear">          
          <option value="2021">2021</option>
          <option value="2022">2022</option>
          <option value="2023">2023</option>
          <option value="2024">2024</option>
          <option value="2025">2025</option>
          <option value="2026">2026</option>
          <option value="2027">2027</option>
          <option value="2028">2028</option>
          <option value="2029">2029</option>
          <option value="2030">2030</option>
          <option value="2031">2031</option>
          <option value="2032">2032</option>
          <option value="2033">2033</option>
          <option value="2034">2034</option>
       </select>
      </div>



    </div>
    <div class="form-group col-sm-6">
      <input class="form-control" type="text" 
      
      <% if (__config.nodeenv == 'development') { %>  
        value="000" 
      <% } %> 
      
      name="cvv" id="cvv" autocomplete="cc-csc" placeholder="CVC" required>
    </div>
    <% if (__req.user) { %>
    <div class="form-group">
      <div class="form-check">
        <input class="form-check-input " checked value="YES" type="checkbox" name="saveCard" id="saveCard">
        <label class="form-check-label" for="gridCheck">
          Kredi Kartımı Kaydet
        </label>
        <small class="form-text text-muted">Güvenle uluslararası Paratika güvencesi ile kaydet</small>
      </div>
    </div>

    <% } %>




</div>
<div class="card-wrapper d-none"></div>

<div class="text-center">
    <button id="pay-btn" name="makepayment" value="true" class="pay-btn btn btn-success" type="submit"><i
        class="czi-thumb-up mr-2"></i>Ödeme Yap</button>
  </div>

</form>


