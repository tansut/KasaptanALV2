    //     setTimeout(function() {
    //     $('.redirecting').show();
          
    //     }, 5000);
    //     setTimeout(function()  {
    //       window.location.href = "/pay/<%=orders[0].ordernum%>"
    //   }, 10000);
    //   })

    // <% } %>

  </script>

</body>

</html>