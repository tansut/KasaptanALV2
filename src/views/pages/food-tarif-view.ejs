<!DOCTYPE html>
<html lang="tr-TR" prefix="og: http://ogp.me/ns#">

<head>
  <% include ./_partial/head %>
  <% if (Object.keys(__req.query).length != 0 ) {%>
  <meta name="robots" content="noindex,follow">
  <%}%>
</head>

<body>



  <% include ./_partial/header %>

  <%-include('./_partial/food-select-alternatives.ejs', {}) %>


  <div class="page-title-overlap bg-primary pt-4">
    <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
      <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-star">
            <li class="breadcrumb-item"><a class="text-nowrap" href="/"><i class="czi-home"></i></a></li>
            <% if (resource.tag1 && resource.tag1.includes('tarif')) { %>
            <li class="breadcrumb-item text-nowrap"><a href="/et-yemekleri">Yemekler</a>
            </li>
            <% } else { %>
              <li class="breadcrumb-item text-nowrap"><a href="/et-yemekleri">Yemekler</a>
              </li>
            <% } %>
            <li class="breadcrumb-item text-nowrap active" aria-current="page"><%= resource.title %></li>
          </ol>
        </nav>
      </div>
      <div class="order-lg-1 pr-lg-4 text-center text-lg-left">
        <h1 class="h3 mb-2 text-light mb-0"><%= resource.title %></h1>

        <h2 class="h4 lead text-light"><%= resource.description || defaultDesc %></h2>


          
        <% if (__req.user && __req.user.hasRole('admin')) {%>

        <a class="btn btn-sm btn-dark" href="<%= `/pages/admin/resource/product-photos/${resource.product.id}?fileprefix=${resource.product.slug}&title=${resource.product.name}&videotype=product-videos#res${resource.id}` %>"
          target="_blank">Düzenle</a>

        <% } %>

      </div>
    </div>
  </div>







  <!-- Page Content-->
  <div class="container px-0 cz-gallery">
    <!-- Gallery + details-->
    <div class="bg-light box-shadow-lg mb-3 pb-4 ">
      <div>
        <div class="row ">
          <!-- Product gallery-->

          <div class="col-lg-6 ">
            <div class="">

              <div class="">
               
                <a data-resid="<%=resource.id%>" class="gallery-item d-block overflow-hidden gallery-item <%= resource.contentType == 'video-youtube' ? 'video-item':''%>"
                  href="<%= `${resource.getFileUrl()}`  %>"
                  <% if (resource.tag1 && (resource.tag1.includes('tarif') || resource.tag1.includes('yemek'))) { %> data-sub-html="<%= `<h6 class="font-size-normal text-light">${resource.title || ''}</h6><p class="font-size-md mb-2">${resource.description || ''}</p>`%> 
                    <% if (true) {%>
                    <%=  '<a href="'%>  <%= include(`./_partial/addtonotelink.ejs`, {resource: resource, disableSlider: true  }) %>   <%='"class="btn btn-block btn-primary btn-sm rounded-0"><i class=" czi-thumb-up mr-2"></i>'%><%= resource.tag3 || 'Eti Bizden' + '</button>' %>
                    <% } %>
                    " <% } %>>
                  <img class="" <% if (resource.contentType == 'video-youtube') { %>
                    src="<%= (resource.thumbnailUrl ? resource.getThumbnailFileUrl(): null) ||  `${__req.helper.imgUrl('product-photos', resource.product.slug)}` %>"
                    <% } else { %> src="<%= `${resource.getFileUrl()}` %>" <% } %> alt="<%= resource.title  %>">
                </a>


              
              </div>



            </div>
          </div>


          <div class="col-lg-6 ">
            <div class=" px-3 pl-lg-0 pr-lg-4 mt-3   pt-lg-3 pb-0">
 
              <h3 class="h5">Hangi etler uygundur?</h3>
              <p>
                <strong><%=resource.title%></strong> yapmak için aşağıdaki ürünlerimizi güvenle satın alabilirsiniz.

              </p>
              <ul>
                <% products.forEach(p=> { %>
                  <li>
                  <a class="alert-link" href="/<%=`${p.slug}?r=${resource.id}&autoNote=1&hideproduct=1`%>"><%=p.name%></a>
                  </li>
                <% }) %>
              </ul> 

              <div class="alert mt-2 alert-secondary mb-3">

                <h4 class="h6">Hangi yemeğe hangi et</h4>
                <p class="font-size-sm">
                  <i class="czi-announcement mr-1"></i>
                  Eti Bizden seçeneğini kullanın, hangi yemeğe hangi eti ne kadar almalısınız biz hesaplayalım.
                </p>
                <a data-product="/<%=resource.product.slug%>" href="<%- include(`./_partial/addtonotelink.ejs`, {resource: resource, auto: false  }) %>"
                  class="btn btn-sm btn-block  btn-primary font-size-xs"><i class=" czi-thumb-up mr-1">
                  </i>Eti Bizden</a>
              </div>

                   

              <% if (resource.mddesc) { %>
              <div>
                <h4 class="h5">Tarifi</h4>
                  <%- controller.Markdown.render(resource.mddesc) %>
              </div>
              <% } %>
 


            </div>
          </div>
        </div>
      </div>
      <div id="tabpc"></div>
      <!-- <ul class="nav nav-tabs" id="optionsTab" role="tablist">
        <li class="nav-item">
          <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home"
            aria-selected="true">Bilgi</a>
        </li>




      </ul> -->
      <!-- <div class="tab-content px-4" id="myTabContent">
        <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">



        </div>
      </div> -->
    </div>


  </div>








  <% include ./_partial/footer %>
  <% include ./_partial/scripts %>


<script>
function openSlider(i) {
                    var node = $('a[data-resid=' + i + ']')[0];
                    window.lgData.lg0.items.forEach(function (item, i) {
                   if (item == node) {
                     window.location.hash = "lg=1&slide=" + i;
                     window.lgData.lg0.init()
                    }
                   })
                  }
        $(document).ready(function() {
          openSlider(<%=resource.id%>);   
        })
</script>


  </body>

</html>