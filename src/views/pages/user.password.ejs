<!DOCTYPE html>
<html lang="tr-TR" prefix="og: http://ogp.me/ns#">

<head>
    <% include ./_partial/head %>
    <meta name="robots" content="noindex,follow">

</head>

<body>
    <% include ./_partial/header %>



    <div class="page-title-overlap page-title bg-accent py-2 ">
        <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
            <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
                <nav aria-label="breadcrumb" class="d-none d-lg-block">
                    <ol
                        class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-star">
                        <li class="breadcrumb-item"><a class="text-nowrap" href="/"><i class="czi-home"></i></a></li>
                        <li class="breadcrumb-item text-nowrap active" aria-current="page">
                            Şifre İşlemleri</li>
                    </ol>
                </nav>
            </div>
            <div class="order-lg-1 pr-lg-4 text-center text-lg-left">
                <h1 class="h3 text-light mb-0">Şifre İşlemleri</h1>
                <p class="lead text-light"></p>

            </div>
        </div>
    </div>

    <!-- Page Content-->
    <div class="container pb-5 mb-2 mb-md-3">
        <div class="row">
            <%- include('./_partial/user.sidebar.ejs', {
               page: 'password'
           }) %>
            <!-- Content  -->
            <section class="col-lg-8">
                <!-- Toolbar-->
                <div class="d-none d-lg-flex justify-content-between align-items-center pt-lg-3 pb-4 pb-lg-5 mb-lg-3">
                    <h6 class="font-size-base text-light mb-0">Bilgilerinizi güncelleyin:</h6><a
                        class="btn btn-primary btn-sm" href="/user/signoff"><i class="czi-sign-out mr-2"></i>Çıkış</a>
                </div>
                <!-- Profile form-->
                <form method="post" class="needs-validation" novalidate action="/user/password">

                    <div class="row">

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="account-pass">Mevcut Şifreniz</label>
                                <div class="password-toggle">
                                    <input minlength="3" maxlength="20" required class="form-control" type="password"
                                        name="oldpass" id="oldpass">
                                    <label class="password-toggle-btn">
                                        <input class="custom-control-input" type="checkbox"><i
                                            class="czi-eye password-toggle-indicator"></i><span
                                            class="sr-only">Göster</span>
                                    </label>
                                    <div class="invalid-feedback">şifre giriniz

                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-sm-6">
                            <div class="form-group">
                                <label for="account-confirm-pass">Yeni Şifreniz</label>
                                <div class="password-toggle">
                                    <input minlength="3" maxlength="20" required class="form-control" type="password"
                                        name="newpass" id="newpass">
                                    <label class="password-toggle-btn">
                                        <input class="custom-control-input" type="checkbox"><i
                                            class="czi-eye password-toggle-indicator"></i><span
                                            class="sr-only">Göster</span>
                                    </label>
                                    <div class="invalid-feedback">şifre giriniz

                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <hr class="mt-2 mb-3">
                            <div class="d-flex flex-wrap justify-content-between align-items-center">

                                <button id="save-profile" name="save-profile" value="true"
                                    class="btn btn-primary mt-3 mt-sm-0" type="submit">Güncelle</button>
                            </div>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>


    <% include ./_partial/footer %>
    <% include ./_partial/scripts %>

</body>

</html>