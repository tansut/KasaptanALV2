<!DOCTYPE html>
<html lang="tr-TR" prefix="og: http://ogp.me/ns#">

<head>
  <% include ./_partial/head %>
</head>

<body>
  <% include ./_partial/header %>

  <%-include('./_partial/food-select-alternatives.ejs', {}) %>


  <div class="page-title py-2">
    <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
      <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
        <nav aria-label="breadcrumb" class="d-none d-lg-block">
          <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-star">
            <li class="breadcrumb-item"><a class="text-nowrap" href="/"><i class="czi-home"></i></a></li>
            <li class="breadcrumb-item text-nowrap"><a href="/et-yemek-tarifleri">Tarifler</a>
            </li>
            <li class="breadcrumb-item text-nowrap active" aria-current="page">
              <%=controller.category? controller.category.name: 'Tümü'%></li>
          </ol>
        </nav>
      </div>
      <div class="order-lg-1 pr-lg-4 text-center text-lg-left">
        <h1 class="h3">
          <%=controller.category ? controller.category.name + ' Yemek Tarifleri':'Tarifler'%> </h1>
          <p class="lead">

            <span class="badge badge-primary mr-1 "><i class=" czi-thumb-up mr-1">
            
            </i>Eti Bizden</span><span class="">seçeneği ile tarife uygun eti ihtiyacınız kadar hazırlıyoruz.</span> 

            
  
          </p>
      </div>
    </div>
  </div>

  <% var reyonlar = __categories.filter(p=>p.type.includes('reyon')).slice(0,2) %>
  <div class="container px-0">
    <div class="bg-light box-shadow-lg mb-3 ">
      <div class="">

        <ul class="nav nav-tabs  nav-justified" id="pills-tab" role="tablist">
          <li class="nav-item">
            <a class="nav-link nav-link-shrink <%= controller.category ? '': 'active' %>" id=all-tab" 
              href="/et-yemek-tarifleri%>" role="tab" aria-controls="Tümü"
              >Tümü</a>
          </li>

          <%reyonlar.forEach((category,i) => { %>
          <li class="nav-item">
            <a class="nav-link nav-link-shrink <%= controller.category ? (controller.category.id == category.id ? 'active':''): '' %>" id="<%= category.slug %>-tab" 
              href="/et-yemek-tarifleri/kategori/<%=`${category.slug}`%>" role="tab" aria-controls="<%= category.name %>"
              ><%= category.name %></a>
          </li>
          <% }) %>
        </ul>

<div class="px-4">
  <div class="row cz-gallery">
    <% controller.foods.forEach((resource,i) => {%>
      <div class="col-md-2 col-6 mb-4">
      <%- include(`./_partial/resource-item.ejs`, {resource: resource, subUrl: 'yemek-tarifi'  }) %>

    </div>
    <% }) %>

</div>
</div>

          

    </div>
  </div>
  </div>

  <% include ./_partial/footer %>
  <% include ./_partial/scripts %>

</body>

</html>