      window.App.gTag('checkout', 'view/shopcard/butcher', "<%=shopcard.butchers[item].slug%>", 1);
    <%})%>

    <% shopcard.items.forEach(item => { %>
      window.App.gTag('checkout', 'view/shopcard/item', "<%=item.product.slug%>", 1);
