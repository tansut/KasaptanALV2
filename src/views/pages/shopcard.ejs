            <button data-tag="true" data-category="checkout" data-action="view/start" data-label="<%=__req.user ? __req.user.mphone: ''  %>" data-value="<%=shopcard.items.length%>" class="btn btn-primary btn-block mt-4  " type="submit" value="true" name="checkout"
