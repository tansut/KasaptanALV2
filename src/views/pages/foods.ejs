<!DOCTYPE html>
<html lang="tr-TR" prefix="og: http://ogp.me/ns#">

<head>
  <% include ./_partial/head %>
  <% if (Object.keys(__req.query).length != 0 ) {%>
    <meta name="robots" content="noindex,follow">
    <%}%>
</head>

<body>
  <% include ./_partial/header %>

  <%-include('./_partial/food-select-alternatives.ejs', {}) %>


  <div class="page-title-overlap bg-primary pt-4">
    <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
      <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-star">
            <li class="breadcrumb-item"><a class="text-nowrap" href="/"><i class="czi-home"></i></a></li>
            <li class="breadcrumb-item text-nowrap active" aria-current="page">Yemekler
            </li>
          </ol>
        </nav>
      </div>
      <div class="order-lg-1 pr-lg-4 text-center text-lg-left">
        <h1 class="h3 text-light">
          <%='Yemekler'%> </h1>
        <h2 class="lead text-light h4">

          <span class="badge badge-light mr-1 "><i class=" czi-thumb-up mr-1">

            </i>Eti Bizden</span><span class="">seçeneği ile yemeğinize uygun eti ihtiyacınız kadar hazırlıyoruz.</span>



          </h2>
      </div>
    </div>
  </div>

  <% var reyonlar = __helper.foodCategories.filter(p=>p.slug=='tarifler') %>


  <div class="">
    <div class="bg-light container px-0 mb-3 box-shadow-lg ">
      <div class="mt-3">

        <!-- <ul class="nav nav-tabs  nav-justified mb-0 " id="pills-tab" role="tablist">
          <li class="nav-item">
            <a class="nav-link nav-link-shrink nav-link-shrink <%= controller.foodCategory ? '': 'active' %>" id=all-tab" 
              href="/et-yemekleri" role="tab" aria-controls="Tümü"
              >Tümü</a>
          </li>
  
          <%reyonlar.forEach((category,i) => { %>
          <li class="nav-item">
            <a class="nav-link nav-link-shrink <%= controller.foodCategory == category.slug ? 'active':'' %>" id="<%= category.slug %>-tab" 
              href="<%=`/et-yemekleri?tab=${category.slug}`%>" role="tab" aria-controls="<%= category.name %>"
              ><%= category.name %></a>
          </li>
          <% }) %>
        </ul>  -->

        <div class="colx">
          <% var foodCats = __categories.filter(p=>p.type == 'resource'); %>

          <% foodCats.forEach((cat, i) => { %>
          <% var foods = controller.getFoods(cat) %>
          <% if (foods.length) { %>
          <div class="px-3 pt-3 dborder-bottom">
            <%- include('./_partial/foods-slider.ejs', {title: cat.name, desc: cat.shortdesc ? cat.shortdesc: undefined, text: '', iconUrl: `${__req.helper.imgUrl('category-photos', cat.slug)}`,
            allUrl: '/et-yemekleri/' + cat.slug, foods: foods}); %>

          </div>
          <%} %>
          <%})%>
        </div>







      </div>
    </div>
  </div>


  <% include ./_partial/footer %>
  <% include ./_partial/scripts %>

</body>

</html>