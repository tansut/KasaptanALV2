<!DOCTYPE html>
<html lang="en">

<head>
  <% include ./_partial/head %>
</head>

<body>
  <% include ./_partial/header %>



  <div class="page-title-overlap bg-primary pt-4">
    <div class="container d-lg-flex justify-content-between py-2 py-lg-3">
      <div class="order-lg-2 mb-3 mb-lg-0 pt-lg-2">
        <nav aria-label="breadcrumb">
          <ol class="breadcrumb breadcrumb-light flex-lg-nowrap justify-content-center justify-content-lg-star">
            <li class="breadcrumb-item"><a class="text-nowrap" href="/"><i class="czi-home"></i></a></li>
            <li class="breadcrumb-item text-nowrap"><a href="/et-yemek-tarifleri">Etler Bizden Tarifleri</a>
            </li>
            <li class="breadcrumb-item text-nowrap active" aria-current="page">
              <%=controller.category? controller.category.name: 'Tümü'%></li>
          </ol>
        </nav>
      </div>
      <div class="order-lg-1 pr-lg-4 text-center text-lg-left">
        <h1 class="h3 text-light mb-0">
          <%=controller.category ? controller.category.name + ' Yemek Tarifleri':'Etler Bizden Tarifleri'%> </h1>
        <p class="lead text-light">Siz yemeğe karar verin, etler bizden.</p>
      </div>
    </div>
  </div>

  <% var reyonlar = __categories.filter(p=>p.type == 'reyon').slice(0,2) %>
  <div class="container">
    <div class="bg-light box-shadow-lg rounded-lg px-4 py-4 mb-2 mb-md-4">
      <div class="">

        <ul class="nav nav-tabs  nav-justified mb-2 mb-md-4" id="pills-tab" role="tablist">
          <li class="nav-item">
            <a class="nav-link nav-link-shrink <%= controller.category ? '': 'active' %>" id=all-tab" 
              href="/et-yemek-tarifleri%>" role="tab" aria-controls="Tümü"
              >Tümü</a>
          </li>

          <%reyonlar.forEach((category,i) => { %>
          <li class="nav-item">
            <a class="nav-link nav-link-shrink <%= controller.category ? (controller.category.id == category.id ? 'active':''): '' %>" id="<%= category.slug %>-tab" 
              href="/et-yemek-tarifleri/<%=`${category.slug}`%>" role="tab" aria-controls="<%= category.name %>"
              ><%= category.name %></a>
          </li>
          <% }) %>
        </ul>

        <!-- <div class="text-center">
  <div class="btn-group mb-4 " role="group" aria-label="Reyonlar">
   

  <%reyonlar.forEach((category,i) => { %>
    <a href="/et-yemek-tarifleri/<%=category.slug%>"  class="btn btn-sm btn-outline-dark"><%=category.name%></a>
  <% }) %>

</div>
</div> -->


        <div class="row">
          <% controller.foods.forEach((resource,i) => {%>
          
          <div class="col-md-2 col-6 ">

            <div class="card product-card card-static item-card">
              <a class="card-img-top d-block overflow-hidden gallery-item video-item" href="/<%= `${resource.product.slug}?r=${resource.id}`  %>">
                <!-- <img class="rounded" src="<%= `https://img.youtube.com/vi/${resource.contentUrl}/maxresdefault.jpg` %>"
                  alt="<%= resource.title  %>"> -->
                  <img class="rounded" src="<%= `/${resource.product.slug}/resimler/thumbnail` %>" alt="<%= resource.title  %>">

              </a>
              <div class="card-body pl-0 text-center">
                <h3 class="product-title font-size-md"><a href="/<%= resource.product.slug%>"><%= resource.title  %></a>
                </h3>
              </div>
            </div>
          </div>
          <% }) %>
        </div>

      </div>

    </div>
  </div>


  <% include ./_partial/footer %>
  <% include ./_partial/scripts %>

</body>

</html>